# program that aproximates the value of pi
# https://en.wikipedia.org/wiki/Approximations_of_%CF%80

# C code:
# int den = 3;
# double result_pi = 1; double sign = -1;
# for (int i = 0; i < 100; i++) {
#     result_pi += sign / den;
#     den += 2;
#     sign *= -1;
# }
# printf("%lf\n", 4 * result_pi);

# order of the stack in the beginning of each loop iteration
# index
# den
# result
# sign

# number of iterations
%alias N 100

    push 0  # index
    push 3  # den
    push 1  # result
    push -1 # sign

loop:
    push 0
    swap 4
    dup 0
    push N
    equ
    jif end
    push 1
    add
    swap 4
    pop

    dup 0
    dup 3
    div
    dup 2
    add
    swap 2
    pop
    push 2
    dup 3
    add
    swap 3
    pop
    push -1
    mul
    jmp loop

end:
    # finish pi calculation and print the result
    swap 2
    push 4
    mul
    print 0
    exit
